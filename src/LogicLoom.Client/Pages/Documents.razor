        border-top-right-radius: 0;
        border-bottom-right-radius: 0;
        border-right: none;
    }

    .input-group-append .btn {
        border-top-left-radius: 0;
        border-bottom-left-radius: 0;
        border-left: 1px solid var(--vscode-input-border);
        min-width: 38px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .sidebar-filters,
