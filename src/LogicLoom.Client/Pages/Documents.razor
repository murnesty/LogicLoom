        align-items: center;
        gap: 8px;
        margin-bottom: 1rem;
        color: var(--vscode-foreground);
        font-weight: 500;
        font-size: 0.95em;
        padding: 0.5rem 0;
        border-bottom: 1px solid var(--vscode-panel-border);
    }

    .section-header i {
        color: var(--vscode-symbolIcon-variableForeground);
    }

    .documents-content {
        flex: 1;
        display: flex;
