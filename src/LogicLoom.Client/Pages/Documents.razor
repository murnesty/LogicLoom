        padding: 1rem;
        border-bottom: 1px solid var(--vscode-panel-border);
        background: var(--vscode-sideBar-background);
    }

    .sidebar-filters {
        border-bottom: 2px solid var(--vscode-panel-border);
    }

    .sidebar-navigator {
        flex: 1;
        overflow: hidden;
        display: flex;
        flex-direction: column;
        border-bottom: none;
    }

    .document-viewer {
        flex: 1;
        display: flex;
        flex-direction: column;
        overflow: hidden;
        background: var(--vscode-editor-background);
        border: 1px solid var(--vscode-panel-border);
        border-radius: 8px;
        margin: 0.5rem;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .view-controls {
        padding: 1rem 1.5rem;
        border-bottom: 2px solid var(--vscode-panel-border);
        background: var(--vscode-titleBar-activeBackground);
        display: flex;
        justify-content: space-between;
        align-items: center;
        min-height: 60px;
    }

    .controls-left {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .controls-right {
        display: flex;
        gap: 8px;
    }

    .view-mode-selector {
        display: flex;
        gap: 8px;
    }

    .document-content {
        flex: 1;
        overflow: auto;
        padding: 2rem;
        background: var(--vscode-editor-background);
        line-height: 1.6;
        font-size: 0.95rem;
    }

    .no-document-selected {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        background: var(--vscode-editor-background);
        position: relative;
        border-radius: 8px;
        margin: 1rem;
        border: 2px dashed var(--vscode-panel-border);
    }

