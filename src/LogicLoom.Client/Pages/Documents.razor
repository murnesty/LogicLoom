@page "/documents"
@using LogicLoom.Client.Services
@using Microsoft.AspNetCore.Components.Web
@implements IDisposable
@inject IDocumentCache DocumentCache
@inject IDocumentService DocumentService
@inject NavigationManager NavigationManager

<div class="documents-page">
    <LoadingOverlay IsLoading="@_isLoading" Message="@_loadingMessage" />

    <div class="documents-sidebar">
        <div class="sidebar-header">
            <h3>Documents</h3>
            <p class="subtitle">WordML Document Analyzer</p>
            <div class="upload-zone @(_isDragging ? "dragging" : "")" @ondragenter="HandleDragEnter"
                @ondragleave="HandleDragLeave" @ondragover:preventDefault @ondrop="HandleDrop">
                <InputFile OnChange="@HandleFileSelected" accept=".docx" class="file-upload" />
                <div class="upload-message">
                    <i class="bi bi-cloud-upload"></i>
                    <span>Drop .docx files here or click to upload</span>
                </div>
            </div>
        </div>

        <div class="sidebar-filters">
            <div class="section-header">
                <i class="bi bi-funnel"></i>
                <span>Advanced Search</span>
            </div>
            <AdvancedSearch OnFiltersChanged="HandleFiltersChanged" />
        </div>

        <div class="sidebar-navigator">
            <div class="section-header">
                <i class="bi bi-list-ul"></i>
                <span>Document Library</span>
            </div>
            <DocumentNavigator SelectedDocumentId="@_currentDocumentId" OnDocumentSelectedChanged="ViewDocument" />
        </div>
        <!-- End sidebar -->
    </div>
    <div class="documents-content">
        <div class="content-search-section">
            <div class="section-header">
                <i class="bi bi-search"></i>
                <span>Content Search</span>
            </div>
            <DocumentContentSearch DocumentId="@_currentDocumentId"
                OnSearchResultSelected="HandleSearchResultSelected" />
        </div>

        <div class="document-viewer">
            <div class="view-controls">
                <div class="controls-left">
                    <div class="section-header">
                        <i class="bi bi-eye"></i>
                        <span>Document Viewer</span>
                    </div>
                    <div class="view-mode-selector">
                        <button
                            class="btn @(_viewMode == "tree" ? "btn-primary" : "btn-outline-secondary") btn-with-icon"
                            @onclick="@(() => OnViewModeChanged("tree"))">
                            <i class="bi bi-diagram-3"></i>
                            <span>Tree View</span>
                        </button>
                        <button
                            class="btn @(_viewMode == "virtualized" ? "btn-primary" : "btn-outline-secondary") btn-with-icon"
                            @onclick="@(() => OnViewModeChanged("virtualized"))">
                            <i class="bi bi-graph-up"></i>
                            <span>Performance View</span>
                        </button>
                    </div>
                </div>

                @if (_currentDocumentId.HasValue)
                {
                    <div class="controls-right">
                        <button class="btn btn-danger btn-with-icon" @onclick="DeleteDocument">
                            <i class="bi bi-trash"></i>
                            <span>Delete</span>
                        </button>
                    </div>
                }
            </div>

            @if (_isUploading)
            {
                <div class="upload-progress">
                    <div class="spinner-border spinner-border-sm" role="status">
                        <span class="visually-hidden">Uploading...</span>
                    </div>
                    <span>Uploading document...</span>
                </div>
            }

            @if (_uploadError is not null)
            {
                <div class="alert alert-danger">
                    @_uploadError
                </div>
            }

            @if (_currentDocumentId != null)
            {
                <div class="document-content">
                    @if (_viewMode == "tree" && _treeView != null)
                    {
                        @foreach (var node in _treeView.Nodes)
                        {
                            <TreeNode Node="@node" Level="0" />
                        }
                    }
                    else if (_viewMode == "virtualized")
                    {
                        <VirtualizedDocumentView DocumentId="@_currentDocumentId" />
                    }
                </div>
            }
            else
            {
                <div class="no-document-selected">
                    <div class="message">
                        <i class="bi bi-file-earmark-text"></i>
                        <p>Select a document to view its contents</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .documents-page {
        display: flex;
        height: 100vh;
        max-height: 100vh;
        overflow: hidden;
    }

    .documents-sidebar {
        width: 300px;
        min-width: 250px;
        max-width: 450px;
